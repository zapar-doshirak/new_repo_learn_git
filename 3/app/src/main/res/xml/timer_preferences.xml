<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference

        android:defaultValue="true"
        android:key="enable_sound"
        android:title="Звук"
        android:summaryOff="Sound off"
        android:summaryOn="Sound on"

        />

    <ListPreference

        android:title="Мелодия"
        android:key="timer_melody"
        android:defaultValue="bell"
        android:entries="@array/pref_timer_melody_labels"
        android:entryValues="@array/pref_timer_melody_values"

        />

    <EditTextPreference

        android:title="Изначальное значение таймера"
        android:key="default_interval"
        android:defaultValue="30"
        />

</PreferenceScreen>